## -*- coding: utf-8 -*-

<%def name="html_header()">
<div class="header">
    <h1>${title|striphtml}</h1>    
</div>
</%def>

<%def name="html_footer()">
<footer>
    <div class="footer">
        <div class="pure-g">
            <div class="pure-u-1-2">This site is built with &lt;3 using Pure v0.6.0<br></div>
            <div class="pure-u-1-2">${content_footer}</div>
        </div>
    </div>
</footer>
</%def>

<%def name="navbar()">
<!-- Menu toggle -->
<a href="#menu" id="menuLink" class="menu-link">
    <!-- Hamburger icon -->
    <span></span>
</a>

<div id="menu">
    <div class="pure-menu">
        <a class="pure-menu-heading" href="/">Home</a>
        <ul class="pure-menu-list">
         %for url, text in navigation_links[lang]:
        <li class="pure-menu-item"><a href="${url}" class="pure-menu-link">${text}</a></li>
        %endfor
        </ul>
    </div>
</div>  
</%def>

